@model Omniaccounts.Models.BarCodeViewModel

@{
    ViewBag.Title = "GetStock";
}

<div class="page-wrapper">
    <div class="page-content--bge5">
        <div class="container">
            <div class="login-wrap">
                <div class="login-content">
                    <div class="login-logo">
                        <a href="#">
                            <img src="#" alt="Business Logo">
                        </a>
                    </div>
                    <div class="login-form">

                        @using (Html.BeginForm("GetStock", "Stock", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                @Html.EditorFor(model => model.Barcode, new { htmlAttributes = new { @class = "au-input au-input--full form-control ", placeholder = "Please enter Bar Code" } })
                                @Html.ValidationMessageFor(model => model.Barcode, "", new { @class = "text-danger" })
                            </div>

                            <input type="submit" value="Search" class="au-btn au-btn--block au-btn--green m-b-20" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
